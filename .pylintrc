[MASTER]
ignore=tests
init-hook='import sys, pathlib; sys.path.insert(0, str(pathlib.Path().resolve()/"src"))'

[MESSAGES CONTROL]
disable=
    invalid-name,
    line-too-long,
    missing-function-docstring,
    too-few-public-methods,
    broad-exception-caught,
    too-many-branches,
    too-many-statements,
    too-many-locals,
    too-many-return-statements,
    import-outside-toplevel,
    cyclic-import
